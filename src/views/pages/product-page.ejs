<div class="container">
<section id="product" class="section-p1">
            <div class="single-pro-image">
                <img src="<%= ProductModel.image[0] %>" width="100%" id="MainImg" alt="">

            <div class="small-img-group">
                <div class="small-img-col">
                    <img src="<%= ProductModel.image[0] %>" width="110px" height:70px" class="small-img" alt="">
                </div>
                <div class="small-img-col">
                    <img src="<%= ProductModel.image[1] %>" width="110px" height:70px" class="small-img" alt="">
                </div>
                <div class="small-img-col">
                    <img src="<%= ProductModel.image[2] %>" width="110px" height:70px" class="small-img" alt="">
                </div>
                <div class="small-img-col">
                    <img src="<%= ProductModel.image[3] %>" width="110px" height:70px" class="small-img" alt="">
                </div>
            </div>
        </div>
   
    <div class="single-pro-details">
        <h6>Home / Shoes</h6>
        <h4><%=ProductModel.Product_name %></h4>
        <h2>$<%=ProductModel.price %></h2>
        <select>
            <option>Select Size</option>
            <option>39</option>
            <option>40</option>
            <option>41</option>
            <option>42</option>
            <option>43</option>
            <option>44</option>
            <option>45</option>
        </select>
        <input type="number" value="1">
        <button class="normal">Add To Cart</button>
        <h4>Product Details</h4>
        <span>
            <p><%=ProductModel.description %></p>
        </span>
    </div>

    </div>

</section>
</div>

<script>
        
    var MainImg = document.getElementById("MainImg");
    var smallImg = document.getElementsByClassName("small-img");

    smallImg[0].onclick = function () {
        MainImg.src = smallImg[0].src;
    }
    smallImg[1].onclick = function () {
        MainImg.src = smallImg[1].src;
    }
    smallImg[2].onclick = function () {
        MainImg.src = smallImg[2].src;
    }
    smallImg[3].onclick = function () {
        MainImg.src = smallImg[3].src;
    }
</script>

<section>
    <div id="product1" class="section-p1">
      <h2>Related Products</h2>
      <p>The Best Collection Ever</p>
  
      <section>
        <div class="pro-container" id="container"></div>
      </section>
      <script>
        "<% for (index = 0; index < 4; index++) { %>"
        var code = `
        
              <div class="pro">
                <form id="prodForm" action="/product-page" method="GET">
                <button style="border: none;"><img src="<%= ProductModels[index].image %>" alt=""></button>
                  <input type="hidden" name="id" value="<%= ProductModels[index].id %>">
                  </form>
              <div class="des">
              <span><%=ProductModels[index].brand.name %></span>
              &nbsp<span><%=ProductModels[index].category.name %></span><br>
              <h5><%= ProductModels[index].Product_name %></h5>
             <div id="rating">
                <% for (rat = 0; rat < ProductModels.rating; rat++) { %>
                <span class="star">
                   <i class="fas fa-start"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-star-fill" viewBox="0 0 16 16">
                                 <path d="M3.612 15.443c-.386.198-.824-.149-.746-.592l.83-4.73L.173 6.765c-.329-.314-.158-.888.283-.95l4.898-.696L7.538.792c.197-.39.73-.39.927 0l2.184 4.327 4.898.696c.441.062.612.636.282.95l-3.522 3.356.83 4.73c.078.443-.36.79-.746.592L8 13.187l-4.389 2.256z"/>
                          </svg>
                    </i>
                </span> 
                <% } %> 
            </div>
                     <h4><b>$<%=ProductModels[index].price %></b></h4>
               </div>
             <form action="/add-to-cart" method="POST" id="Myform">
                <input type="hidden" name="productId" value="<%= ProductModels[index]._id %>">
                 <button class="fal fa-shopping-cart cart"><svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor"   viewBox="0 0 16 16">
