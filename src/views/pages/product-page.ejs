<section id="product" class="section-p1">
    <script>
        "<% for (index = 0; index < ProductModel.length; index++) { %>"
        var code = `
            <div class="single-pro-image">
                <img src="<%= ProductModel[index].image[0] %>" width="100%" id="MainImg" alt="">

            <div class="small-img-group">
                <div class="small-img-col">
                    <img src="<%= ProductModel[index].image[0] %>" width="110px" height:70px" class="small-img" alt="">
                </div>
                <div class="small-img-col">
                    <img src="<%= ProductModel[index].image[1] %>" width="110px" height:70px" class="small-img" alt="">
                </div>
                <div class="small-img-col">
                    <img src="<%= ProductModel[index].image[2] %>" width="110px" height:70px" class="small-img" alt="">
                </div>
                <div class="small-img-col">
                    <img src="<%= ProductModel[index].image[3] %>" width="110px" height:70px" class="small-img" alt="">
                </div>
            </div>
        </div>
   
    <div class="single-pro-details">
        <h6>Home / Shoes</h6>
        <h4><%=ProductModel[index].Product_name %></h4>
        <h2>$<%=ProductModel[index].price %></h2>
        <select>
            <option>Select Size</option>
            <option>39</option>
            <option>40</option>
            <option>41</option>
            <option>42</option>
            <option>43</option>
            <option>44</option>
            <option>45</option>
        </select>
        <input type="number" value="1">
        <button class="normal">Add To Cart</button>
        <h4>Product Details</h4>
        <span>
            The Nike Air Max 1 “Mini Symbols” emerges in a premium, multi-color ensemble covered in miniature symbols
            This sneaker features an arrangement of leather, synthetic Hyperfuse and mesh materials coming together throughout the upper in a refreshing layout
            Shades of teal.
        </span>
    </div>

   

    </div>`
        "<% } %>"
        document.getElementById("product").innerHTML = code;
    </script>

</section>

<script>
        
    var MainImg = document.getElementById("MainImg");
    var smallImg = document.getElementsByClassName("small-img");

    smallImg[0].onclick = function () {
        MainImg.src = smallImg[0].src;
    }
    smallImg[1].onclick = function () {
        MainImg.src = smallImg[1].src;
    }
    smallImg[2].onclick = function () {
        MainImg.src = smallImg[2].src;
    }
    smallImg[3].onclick = function () {
        MainImg.src = smallImg[3].src;
    }
    </script>