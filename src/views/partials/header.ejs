<header>
    <style>
        ul > li {
            display:inline-block;
            margin: 5px;
        }
        .main-navbar{
            position:relative;
            
        }
    </style>
    
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <ul class="header-list">
            <li>
                <a href="/homepage"><img src="img/icon.jpg" class="logo" alt=""></a>
            </li>
            <li>
                <a class="navbar-brand" href="/homepage">M.Y.S.O.</a>
            </li>
            <li>
                <a class="navbar-brand" href="/profile-page" id="hello">
            
            
                    <% if(username){ %>
                        Hello, <%= username %>
                            <% } else { %>
                                Hello, Guest
                                <% } %>
                                    %>
            </li>
           

            <li>
                <% if(username){ %>
                    
                    <div class="cartImg">
                    <a href="/cart"><img style="height: 35px;position: relative;left: 20px;"
                            src="/img/Cart.png"></a>
                        </div>
                    
                    <% } %>
            </li> 
            <li>
                    <% if(username){  %>  <!--if user is logged in-->
                       
                            <a class="log">
                                <a class="logout kol" href="/logout"><img style="height: 45px;left:62px;position: relative;"
                                src="/img/logout-exit.png" alt="logout"></a>
                            
                    <% }else{ %>  <!--if user is not logged in-->
                        
                            <a class="log">
                                <a class="login kol" href="/login"><img style="position: relative;" 
                                src="/img/login2.png" alt="login">
                            </a>
                       
                    
                        <% } %>
            </li>
            <li class="main-navbar">
                    <div class="collapse navbar-collapse pr-5" id="navbarSupportedContent">
                        <ul class="navbar-nav mr-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="/homepage">Home <span class="sr-only">(current)</span></a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/shop">Shop</a>
                            </li>
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                    data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                    Products
                                </a>
                                <div id="dropdown" class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <a class="dropdown-item" href="#">Men</a>
                                    <a class="dropdown-item" href="#">Women</a>
                                    <a class="dropdown-item" href="#">Kids</a>
                                </div>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link disabled" href="/about">About</a>
                            </li>
            </li>
            <li>
                    <form class="form-inline my-2 my-lg-0" action="/shop" method="get">
                        <input class="form-control mr-sm-2" type="search" name="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-primary my-2 my-sm-0" type="submit">Search</button>
                    </form>
            </li>
            
    </nav>

</header>